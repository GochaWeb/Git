@model Karizi.Models.NewsModel
@{
    ViewBag.Title = "AddNews";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="my-h1">სიახლის დამატება</h1>
                </div>

            </div>


            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">
                    @using (Html.BeginForm("AddNews", "KariziCms", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(model => model.Title, new { @type = "text", @name = "Title", @placeholder = "სიახლის სათაური", @class = "my-header"  })
                        <div>
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                        <input type="file" name="Photo" placeholder="ფოტო" required class="my-file centered" />
                        @Html.TextAreaFor(model => model.Text, new { @type = "text", @name = "Text", @placeholder = "სიახლის ტექსტი", @class = "my-textarea" })
                        <div>
                            @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                        </div>
                        <input type="submit" value="გაგზავნა" class="btn btn-success centered" />
                        <p class="text-danger">@TempData["Error"]</p>
                        <p class="text-success">@TempData["Success"]</p>
                    }
                </div>
            </div>
        </div>


        </div> <!-- container -->


    </div> <!-- content -->
</div>
<!-- End content-page -->
