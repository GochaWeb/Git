                        <script>
                            $(document).ready(function () {
                                $('.close-wrapper').click(function () {
                                    var x = confirm('Are u sure?');
                                    if (x) {
                                        return true;
                                    } else {
                                        return false;
                                    }
                                });

                            });
                        </script>
