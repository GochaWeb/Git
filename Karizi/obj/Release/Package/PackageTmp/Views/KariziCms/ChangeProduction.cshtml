@model IEnumerable<Karizi.Models.Production>
@{
    ViewBag.Title = "ChangeProduction";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">

        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="my-h1">პროდუქციის შეცვლა</h1>
                </div>
            </div>



            <div class="row">
                <div class="col-sm-12">

                    <p style="color:green">@TempData["success"]</p>
                    <p style="color:red">@TempData["error"]</p>
                    <p style="color:green">@ViewBag.Message</p>
                    <p style="color:red">@ViewBag.Error</p>
                </div>
            </div>  <!-- End row -->
            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">
                    <div class="table-responsive">
                        <table class="table">
                            <tr>
                                <th>
                                    Photo
                                </th>
                                <th>
                                   Name
                                </th>
                               
                                <th>
                                    მოქმედება
                                </th>
                            </tr>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="@item.Photo" width="150px;" /></td>
                                    <td>@item.Name</td>
                                    <td><a href="/KariziCms/ChangeAddedProduct/@item.Id" class="btn btn-warning">რედაქტირება</a></td>
                                    <td><a href="/KariziCms/DelProduction/@item.Id" class="btn btn-danger">წაშლა</a></td>
                                </tr>
                            }

                        </table>
                        </div>
                    </div>
                </div>
            </div>


        </div> <!-- container -->


    </div> <!-- content -->

</div>
<!-- End content-page -->
