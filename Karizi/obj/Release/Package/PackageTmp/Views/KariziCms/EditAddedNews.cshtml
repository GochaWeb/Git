@model Karizi.Models.NewsModel
@{
    ViewBag.Title = "EditAddedNews";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">


        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="my-h1">სიახლის შეცვლა</h1>
                </div>

            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">
                        @using (Html.BeginForm("EditAddedNews", "KariziCms", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <input type="text" name="Id" style="display:none" value="@ViewBag.News.Id" />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.TextBoxFor(model => model.Title, new { @type = "text", @name = "Title", @placeholder = "სიახლის სათაური", @Value = ViewBag.News.Title, @class = "my-header" })
                            <div>
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                            <img src="@ViewBag.News.Photo" class="my-image centered" />
                            <input type="file" name="Photo" placeholder="ფოტო" class="my-file centered" />
                            <textarea name="Text" class="my-textarea" required>@ViewBag.News.Text</textarea>
                            <div>
                                <input type="submit" class="btn btn-success centered" value="გაგზავნა" />
                            </div>
                        }
                    </div>
                </div>
            </div>


        </div> <!-- container -->


    </div> <!-- content -->
</div>
<!-- End content-page -->
