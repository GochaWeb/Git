@model IEnumerable<Karizi.Models.SliderPhoto>
@{
    ViewBag.Title = "EditMain";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}
<link href="~/assets/css/Photo.css" rel="stylesheet" />
<div class="content-page">
    <!-- Start content -->
    <div class="content">


        <div class="container">

            <div class="row">
                <div class="col-sm-12">
                    <h1 class="my-h1">მთავარი გვერდის რედაქტირება</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">
                        <p class="text-success">@TempData["Success"]</p>
                        <p class="text-danger">@TempData["Faild"]</p>
                        <form action="/KariziCms/EditMain" method="post" enctype="multipart/form-data">
                            <h5 class="my-h5 align-center">შუა ტექსტი</h5>
                            <textarea name="TextMid" class="my-textarea" maxlength="500" placeholder="შუა ტექსტი" required>@ViewBag.Mid.Text</textarea>
                            <h5 class="my-h5 align-center">ქვევით ტექსტი</h5>
                            <textarea name="TextBot" class="my-textarea" maxlength="500" placeholder="ქვევით ტექსტი" required>@ViewBag.Bot.Text</textarea>
                            <div>
                                <button type="submit" class="btn btn-success centered">გაგზავნა</button>

                            </div>
                        </form>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">

                        @*სლაიდერის ფოტოები*@
                        <h5 class="my-h5 align-center">სლაიდერის ფოტოების დამატება</h5>
                        <form action="/KariziCms/sliderPhoto" method="post" enctype="multipart/form-data">

                            <input type="file" name="Photo" multiple required class="my-file centered" />
                            <div>
                                <button type="submit" class="btn btn-success centered">გაგზავნა</button>

                            </div>

                        </form>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">

                        <h5 class="my-h5 align-center">სლაიდერის ფოტოები</h5>
                        <div>

                            <div class="row">

                                @foreach (var item in Model)
                                {

                                    <div class="col-sm-4">
                                        <div class="my-block">
                                            <div class="div-wrapper" style="background-image: url(@item.Photo);">
                                                <a id="close-del" class="close-wrapper" href="/KariziCms/DelSliderPhoto/@item.Id"><i class="fa fa-window-close"></i></a>

                                            </div>
                                        </div>
                                    </div>

                                 }
                             </div>
                        </div>
                    </div>
               </div>
         </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">                      


                        <div class="row">

                            @*შუაბლოკი*@
                            <h5 class="my-h5 align-center">შუაბლოკის ფოტოების შეცვლა</h5>

                            <div class="col-sm-4">
                                <div class="my-block">
                                    <form action="/KariziCms/MidPhoto" method="post" enctype="multipart/form-data">
                                        <img src="@ViewBag.Photo1" class="my-image centered" />
                                        <input type="file" name="PhotoOne" required class="my-file-full centered" />
                                        <div>
                                            <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                        </div>
                                    </form>
                                </div>
                            </div>




                            <div class="col-sm-4">
                                <div class="my-block">
                                    <form action="/KariziCms/MidPhoto" method="post" enctype="multipart/form-data">
                                        <img src="@ViewBag.Photo2" class="my-image centered" />
                                        <input type="file" name="PhotoTwo" required class="my-file-full centered" />
                                        <div>
                                            <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                        </div>
                                    </form>
                                </div>
                            </div>



                            <div class="col-sm-4">
                                <div class="my-block">
                                    <form action="/KariziCms/MidPhoto" method="post" enctype="multipart/form-data">
                                        <img src="@ViewBag.Photo3" class="my-image centered" />
                                        <input type="file" name="PhotoThree" required class="my-file-full centered" />
                                        <div>
                                            <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>

                   </div>
               </div>
          </div>


                        <div class="row">
                            <div class="col-sm-12">
                                <div class="my-block">

                                    <div class="row">

                                        @*ქვედა ბლოკი*@
                                        <h5 class="my-h5 align-center">ქვედაბლოკის ფოტოების შეცვლა</h5>

                                        <div class="col-sm-3">
                                            <div class="my-block">
                                                <form action="/KariziCms/BotPhoto" method="post" enctype="multipart/form-data">

                                                    <img src="@ViewBag.P1" class="my-image centered" />
                                                    <input type="file" name="Photo1" required class="my-file-full centered" />
                                                    <div>
                                                        <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="my-block">
                                                <form action="/KariziCms/BotPhoto" method="post" enctype="multipart/form-data">
                                                    <img src="@ViewBag.P2" class="my-image centered" />
                                                    <input type="file" name="Photo2" required class="my-file-full centered" />
                                                    <div>
                                                        <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="my-block">
                                                <form action="/KariziCms/BotPhoto" method="post" enctype="multipart/form-data">
                                                    <img src="@ViewBag.P3" class="my-image centered" />
                                                    <input type="file" name="Photo3" required class="my-file-full centered" />
                                                    <div>
                                                        <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>


                                        <div class="col-sm-3">
                                            <div class="my-block">
                                                <form action="/KariziCms/BotPhoto" method="post" enctype="multipart/form-data">
                                                    <img src="@ViewBag.P4" class="my-image centered" />
                                                    <input type="file" name="Photo4" required class="my-file-full centered" />
                                                    <div>
                                                        <button type="submit" class="btn btn-success centered">გაგზავნა</button>
                                                    </div>
                                                </form>
                                            </div>
                                       </div>

                                   </div>

                              </div>
                         </div>
                     </div>


                    </div> <!-- container -->


        </div> <!-- content -->
</div>
<!-- End content-page -->
