@model IEnumerable<Karizi.Models.News>
@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/_CmsLayout.cshtml";
}

<div class="content-page">
    <!-- Start content -->
    <div class="content">


        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="my-h1">სიახლის შეცვლა</h1>
                </div>
            </div>





         
            <div class="row">
                <div class="col-sm-12">
                    <div class="my-block">
                        <p class="text-success">@TempData["Success"]</p>
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Photo
                                    </th>
                                    <th>
                                        Text
                                    </th>

                                    <th>
                                        მოქმედება
                                    </th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                
                                            <tr>
                                                <td>@item.Title</td>
                                                <td><img src="@item.Photo" width="150px;" /></td>
                                                <td>@Html.Raw(Server.HtmlDecode(item.Text.Substring(0, item.Text.IndexOf('.') + 1)))</td>
                                                <td><a href="/KariziCms/EditAddedNews/@item.Id" class="btn btn-warning">რედაქტირება</a></td>
                                                <td><a href="/KariziCms/DelNews/@item.Id" class="btn btn-danger">წაშლა</a></td>
                                            </tr>
                                       
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>


        </div> <!-- container -->


    </div> <!-- content -->
</div>
<!-- End content-page -->
